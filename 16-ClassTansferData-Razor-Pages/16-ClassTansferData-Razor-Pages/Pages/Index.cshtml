@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Valor de MyString @ViewData["MyString"]</h2>
<h2>Valor de MyNumber @ViewData["MyNumber"]</h2>
<h2>Valo de la propiedad Message @Model.Message</h2>
<br />
<form class="row g-3 mt-4" method="post">
    <div class="form-group row">
        <div class="col-lg-6">
            <label asp-for="Name" class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Procesar</button>
    </div>
</form>
